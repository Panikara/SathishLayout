
@model List<SelectListItem>
@{
    ViewBag.Title = "EmailSettings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("EmailSettings", "Admin", FormMethod.Post))
{
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title">EmailSettings</h4>
        </div>
    </div>
    <!-- end page title end breadcrumb -->

    <div class="row">
        <div class="col-sm-2">

        </div>
        <div class="col-xs-12 col-sm-8">
            <div class="card-box">

                <h4 class="header-title m-t-0 m-b-30">Actions</h4>
                <div class="row">
                    <div class="col-xl-12">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a href="#home1" data-toggle="tab" aria-expanded="false" class="nav-link active">
                                    Create Email
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#profile1" data-toggle="tab" aria-expanded="true" class="nav-link">
                                    Update Email
                                </a>
                            </li>

                        </ul>
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane fade show active" id="home1">
                                <form class="form-horizontal" role="form">
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-3 col-form-label">Select Bank</label>
                                        <div class="col-9">

                                            @Html.DropDownList("ddlBanks", Model as List<SelectListItem>,"Select",new { @class = "form-control select2" })
                                            @*<select class="form-control select2">
                                                <option>Select</option>
                                                <option value="AZ">Arizona</option>
                                                <option value="CO">Colorado</option>
                                                <option value="ID">Idaho</option>
                                                <option value="MT">Montana</option>
                                                <option value="NE">Nebraska</option>
                                                <option value="NM">New Mexico</option>
                                                <option value="ND">North Dakota</option>
                                                <option value="UT">Utah</option>
                                                <option value="WY">Wyoming</option>
                                            </select>*@
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputPassword3" class="col-3 col-form-label">Emails</label>
                                        <div class="col-9">
                                            <div class="tags-default">
                                                <input type="text" value="" data-role="tagsinput" placeholder="add emails" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group mb-0 justify-content-end row">
                                        <div class="col-9">
                                            <button type="submit" class="btn btn-info waves-effect waves-light">Create</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div role="tabpanel" class="tab-pane fade" id="profile1">
                                <form class="form-horizontal" role="form">
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-2 col-form-label">Bank Name</label>
                                        <div class="col-8">
                                            <div class="input-group">
                                                <select class="form-control select2">
                                                    <option>Select</option>
                                                    <option value="AZ">Arizona</option>
                                                    <option value="CO">Colorado</option>
                                                    <option value="ID">Idaho</option>
                                                    <option value="MT">Montana</option>
                                                    <option value="NE">Nebraska</option>
                                                    <option value="NM">New Mexico</option>
                                                    <option value="ND">North Dakota</option>
                                                    <option value="UT">Utah</option>
                                                    <option value="WY">Wyoming</option>
                                                </select>

                                            </div>
                                        </div>
                                        <div class="col-2">
                                            <div class="input-group-append">
                                                <button class="btn-dark waves-effect waves-light" type="button"><i class="mdi mdi-search-web"></i></button>

                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="inputPassword3" class="col-2 col-form-label">Emails</label>
                                        <div class="col-8">
                                            <div class="tags-default">
                                                <input type="text" value="" data-role="tagsinput" placeholder="add emails" />
                                            </div>
                                        </div>
                                        <div class="col-2">

                                        </div>
                                    </div>

                                    <div class="form-group mb-0 justify-content-end row">
                                        <div class="col-8">
                                            <button type="submit" class="btn btn-info waves-effect waves-light">Update</button>
                                        </div>
                                        <div class="col-2">

                                        </div>
                                    </div>
                                </form>


                            </div>

                        </div>
                    </div><!-- end col -->


                </div>
                <!-- end row -->
            </div>
        </div><!-- end col -->
        <div class="col-sm-2">

        </div>
    </div>

}

@section styles{
    <link href="~/Content/App1/assets/plugins/bootstrap-tagsinput/dist/bootstrap-tagsinput.css" rel="stylesheet" />
    <link href="~/Content/App1/assets/plugins/select2/ncss/select2.min.css" rel="stylesheet" />
}

@section scripts{

    <script src="~/Content/App1/assets/plugins/bootstrap-tagsinput/dist/bootstrap-tagsinput.min.js"></script>
    <script type="text/javascript" src="~/Content/App1/assets/plugins/multiselect/js/jquery.multi-select.js"></script>
    <script type="text/javascript" src="~/Content/App1/assets/plugins/jquery-quicksearch/jquery.quicksearch.js"></script>
    <script src="~/Content/App1/assets/plugins/select2/js/select2.min.js" type="text/javascript"></script>


    <script src="~/Content/App1/assets/plugins/select2/njs/select2.min.js"></script>

    <script type="text/javascript">
        jQuery(document).ready(function () {

            //$('.js-example-basic-single').select2();

            // Select2
            $(".select2").select2();


        });
