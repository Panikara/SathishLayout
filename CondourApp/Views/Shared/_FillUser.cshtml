<script src="~/Content/App1/assets/plugins/custombox/dist/custombox.min.js"></script>
<script src="~/Content/App1/assets/plugins/custombox/dist/legacy.min.js"></script>
<script src="~/Content/App1/assets/js/jquery.min.js"></script>
}